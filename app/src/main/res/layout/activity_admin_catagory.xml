<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCatagoryActivity">

    <TextView
        android:id="@+id/sloganCatagory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linearLayoutCatagoty"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/sloganCatagory"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/femaleDress"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/female_dresses"/>

        <ImageView
            android:id="@+id/maleDress"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/tshirts"/>


    </LinearLayout>

</RelativeLayout>